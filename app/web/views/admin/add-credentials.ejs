<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h3>Add Entity Credentials</h3>
<form method="post" class="form-horizontal" role="form">
    <input type="hidden" name="id" value="<%= entity.id %>">
	<div class="form-group">
		<label for='entity_name' class='control-label col-lg-2'>
			Entity Name
			<span data-toggle="tooltip" data-placement="top" title="The entity type" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="entity_name" class="form-control" value="<%= entity.entity_name %>" disabled>
		</div>
	</div>
	<div class="form-group">
		<label for="key" class="control-label col-lg-2">
			Key
			<span data-toggle="tooltip" data-placement="top" title="key" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="key" class="form-control" placeholder="key">
		</div>
	</div>
	<div class="form-group">
		<label for="value" class="control-label col-lg-2">
			Value
			<span data-toggle="tooltip" data-placement="top" title="value" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="value" class="form-control" placeholder="secret">
		</div>
	</div>
    <br>
	<input type="submit" value="Add Credential &raquo;" class="btn btn-primary">
</form>
<script type="text/javascript">
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip()
    });
</script>
    