<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h3>Edit Entity</h3>
<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="<%= entity.id %>" name="id">
	<div class="form-group">
		<label for='entity_name' class='control-label col-lg-2'>
			Name
			<span data-toggle="tooltip" data-placement="top" title="The entity type" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="entity_name" class="form-control" value="<%= entity.entity_name %>">
		</div>
	</div>
    <div class="form-group">
		<label for="entity_type" class='control-label col-lg-2'>
			Entity Type
			<span data-toggle="tooltip" data-placement="top" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
        </label>
		<div class="col-lg-6">
			<input type="text" name='entity_type' class="form-control" value="<%= entity.entity_type %>">
		</div>
	</div>
	<div class="form-group">
		<label for="entity_url" class="control-label col-lg-2">
			URL (Optional)
			<span data-toggle="tooltip" data-placement="top" title="entity_url" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="entity_url" class="form-control" value="<%= entity.entity_url %>">
		</div>
	</div>
	<div class="form-group">
		<label for="entity_image" class="control-label col-lg-2">
			Image (Optional)
			<span data-toggle="tooltip" data-placement="top" title="entity_image" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="entity_image" class="form-control" placeholder="Image URL" value="<%= entity.entity_image %>">
		</div>
	</div>
	<div class="form-group">
		<label for="entity_location" class="control-label col-lg-2">
			Location (Optional)
			<span data-toggle="tooltip" data-placement="top" title="entity_location" data-container="body"><i class="fas fa-question-circle" style="color:#4f9fcf"></i></span>
		</label>
		<div class="col-lg-6">
			<input type="text" name="entity_location" class="form-control" placeholder="Kitchen" value="<%= entity.entity_location %>">
		</div>
	</div>
	<input type="submit" value="Update Entity &raquo;" class="btn btn-primary">
</form>
<script type="text/javascript">
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip()
    });
</script>
    