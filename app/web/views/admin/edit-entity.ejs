<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<h3>Edit Entity</h3>
<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="<%= entity.id %>" name="id">
	<div class="col-6 mb-3">
		<label for='entity_name' class='form-label'>Entity Name</label>
        <input type="text" name="entity_name" class="form-control" value="<%= entity.entity_name %>">
	</div>
    <div class="col-6 mb-3">
		<label for="entity_type" class='form-label'>Entity Type</label>
        <input type="text" name='entity_type' class="form-control" value="<%= entity.entity_type %>">
	</div>
	<div class="col-6 mb-3">
		<label for="entity_url" class="form-label">URL (Optional)</label>
        <input type="text" name="entity_url" class="form-control" value="<%= entity.entity_url %>">
	</div>
	<div class="col-6 mb-3">
		<label for="entity_image" class="form-label">Image (Optional)</label>
        <input type="text" name="entity_image" class="form-control" placeholder="Image URL" value="<%= entity.entity_image %>">
	</div>
	<div class="col-6 mb-3">
		<label for="entity_location" class="form-label">Location (Optional)</label>
        <input type="text" name="entity_location" class="form-control" placeholder="Kitchen" value="<%= entity.entity_location %>">
	</div>
	<input type="submit" value="Update Entity &raquo;" class="btn btn-primary">
</form>
